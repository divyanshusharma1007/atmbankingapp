<!DOCTYPE html>
<html lang="en">

<head>
     <meta charset="UTF-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>transition details</title>
</head>
<style>
     body {
          background-image: radial-gradient(circle 610px at 5.2% 51.6%, rgba(5, 8, 114, 1) 0%, rgba(7, 3, 53, 1) 97.5%);
     }

     .usname {
          font-style: italic;
          background: #dbffe9;
          background: -webkit-linear-gradient(to right, #dbffe9, #ff05c9);
          background: linear-gradient(to right, #dbffe9, #ff05c9);
          -webkit-background-clip: text;
          background-clip: text;
          text-transform: capitalize;
          color: transparent;
          font-size: 50px;
          margin-left: 20px;
     }

     .cont {
          display: flex;
          justify-content: space-between;
          color: white;
          width: 90%;
          margin: 5%;

     }

     .cont2 {
          display: flex;
          flex-direction: column;
          margin-top: 50px;
          justify-content: space-evenly;
          height: 80%;
     }

     .btn-grad {
          background-image: linear-gradient(to right, #ED4264 0%, #FFEDBC 51%, #ED4264 100%)
     }

     .btn-grad {
          margin: 50px;
          padding: 15px 45px;
          text-align: center;
          text-transform: uppercase;
          transition: 0.5s;
          font-weight: bolder;
          background-size: 200% auto;
          margin-top: 20px;
          color: rgb(5, 5, 5);
          box-shadow: 0 0 20px rgb(202, 202, 202);
          border-radius: 10px;
          display: block;
     }

     .btn-grad:hover {
          background-position: right center;
          font-weight: bolder;
          /* change the direction of the change here */
          color: rgb(0, 0, 0);
          text-decoration: none;
     }

     .forms {
          display: flex;
          justify-content: center;
     }

     .contlabel {
          font-weight: bolder;
          font-size: 15px;
          color: rgb(53, 53, 53);
          text-shadow: 5px 5px 10px rgb(255, 255, 255);
     }

     .content {
          font-size: 12px;
          width: 80%;
          padding: 5px;
          padding-left: 10px;
          margin-top: 10px;
          margin-right: 20px;
          background-color: white;
          text-shadow: 3px 3px 5px rgb(255, 174, 174);
          color: rgb(54, 54, 54);
          font-weight: bolder;
          border-bottom: 3px solid rgb(94, 94, 94);
          border-radius: 3px 3px 3px 8px;
     }

     .changepin {
          display: flex;
          width: 25%;
          background-color: #FF9A8B;
          background-color: #FAD961;
          background-image: linear-gradient(90deg, #FAD961 0%, #F76B1C 100%);
          flex-direction: column;
          border: 6px solid rgb(184, 184, 184);
          padding: 12px;
          border-radius: 20px 0px 20px 0px;
     }

     .saver .btn-grad {
          margin: 5px;
          margin-top: 20px;
     }

     #cpin {
          position: absolute;
          top: -42%;
          transition: 0.6s;
     }

     #cdpo {
          position: absolute;
          top: -42%;
          transition: 0.6s;
     }

     #cdp {
          position: absolute;
          top: -42%;
          transition: 0.6s;
     }

     .avlbal {
          color: rgb(114, 114, 114);
          position: absolute;
          font-size: 45px;
          top: -42%;
          text-shadow: 2px 2px 3px rgb(255, 108, 108);
          transition: 0.6s;
          border: 6px solid rgb(255, 106, 106);
          background-image: linear-gradient(to top, #fbc2eb 0%, #a6c1ee 100%);
          padding: 20px;
          border-radius: 10px;
     }

     #button {
          font-weight: bolder;
          color: balck;
          text-decoration: none;
          background-color: white;
          font-size: 30px;
          padding: 10px;
          padding-left: 25px;
          padding-right: 25px;
          border-radius: 200px;
     }
</style>

<body>
     <h1 class="usname"> Welcome , Hello {{name}}</h1>
     <div class="cont">
          <div class="cont2">
               <input class="btn-grad" id="bali" type="button" value="Balance inquiry">
               <input class="btn-grad" id="cw" type="button" value="Cash withdrawl">
          </div>
          <div class="cont2">
               <input class="btn-grad" id="cppin" type="button" value="change pin">
               <input class="btn-grad" id="cashdepo" type="button" value="Cash deposit">
          </div>
     </div>
     <div class="forms">
          <h1 class="avlbal" id="avlbal"> your avilabale balance is {{bal}} RS</h1>
     </div>
     <div class="forms">
          <form action="/changepin" id="cpin" method="post" class="changepin">
               <div class="name">
                    <label for="name" class="contlabel">Enter your New pin :</label>
                    <input type="password" id="pin1" name="pin1" class="content"
                         placeholder="pin must have 4 degit integer">
               </div>
               <div class="saver">
                    <input type="submit" class="btn-grad" value="SUBMIT">
               </div>
          </form>
     </div>
     <div class="forms">
          <form action="/cashwithdraWL" id="cdpo" method="post" class="changepin">
               <div class="name">
                    <label for="bal" class="contlabel">Your avilabale balance is {{bal}}</label>
                    <input type="number" id="bal" name="bal" class="content"
                         placeholder="Enter the amount which you want to withdraw">
               </div>
               <div class="saver">
                    <input type="submit" class="btn-grad" value="SUBMIT">
               </div>
          </form>
     </div>
     <div class="forms">
          <form action="/cashdeposit" id="cdp" method="post" class="changepin">
               <div class="name">
                    <label for="name" class="contlabel">Enter the balance which you want to deposit :</label>
                    <input type="number" id="pin1" name="dep" class="content"
                         placeholder="Enter the amount which you want to deposit">
               </div>
               <div class="saver">
                    <input type="submit" class="btn-grad" value="SUBMIT">
               </div>
          </form>
     </div>
     <div class="forms">
          <a href="/" id="button">Go to Home</a>
     </div>
     </div>
     <script>
          document.getElementById("bali").addEventListener("click", () => {
               if (document.getElementById("avlbal").style.top == "-42%") {
                    document.getElementById("avlbal").style.top = "32%"
               }
               else {
                    document.getElementById("avlbal").style.top = "-42%"
               }
          })
          document.getElementById("cppin").addEventListener("click", () => {
               if (document.getElementById("cpin").style.top == "-42%") {
                    document.getElementById("cpin").style.top = "32%"
               }
               else {
                    document.getElementById("cpin").style.top = "-42%"
               }
          })
          document.getElementById("cashdepo").addEventListener("click", () => {
               if (document.getElementById("cdp").style.top == "-42%") {
                    document.getElementById("cdp").style.top = "32%"
               }
               else {
                    document.getElementById("cdp").style.top = "-42%"
               }
          })
          document.getElementById("cw").addEventListener("click", () => {
               if (document.getElementById("cdpo").style.top == "-42%") {
                    document.getElementById("cdpo").style.top = "32%"
               }
               else {
                    document.getElementById("cdpo").style.top = "-42%"
               }
          })
     </script>
</body>

</html>